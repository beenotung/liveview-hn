{
  "name": "liveview-hn",
  "version": "1.0.0",
  "type": "module",
  "description": "Hacker News Reader powered by ts-liveview",
  "keywords": [
    "ts-liveview",
    "typescript",
    "hacker-news"
  ],
  "author": "Beeno Tung <aabbcc1241@yahoo.com.hk> (https://beeno-tung.surge.sh)",
  "license": "BSD-2-Clause",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/beenotung/liveview-hn.git"
  },
  "homepage": "https://github.com/beenotung/liveview-hn#readme",
  "bugs": {
    "url": "https://github.com/beenotung/liveview-hn/issues"
  },
  "scripts": {
    "lint": "eslint --fix .",
    "format": "prettier --write . && format-json-cli",
    "fix": "run-p fix:*",
    "fix:server": "fix-esm-import-path server/index.ts",
    "fix:client": "fix-esm-import-path client/index.ts",
    "fix-dist": "fix-esm-import-path dist/db/proxy.js",
    "build": "run-p build:*",
    "build:server": "tsc -p . && npm run fix-dist",
    "build:client": "esbuild client/index.ts --bundle --minify --outfile=build/bundle.min.js",
    "size": "run-s size:*",
    "size:bundle": "esbuild client/index.ts --bundle --outfile=build/bundle.js",
    "size:minify": "esbuild client/index.ts --bundle --minify --outfile=build/bundle.min.js",
    "size:compress": "gzip -kf build/bundle.min.js",
    "size:report": "ls -l build/bundle.*",
    "size:report-h": "ls -lh build/bundle.*",
    "start": "node dist/server/index.js --prod",
    "dev": "run-s build reset-open watch",
    "reset-open": "node scripts/reset-open.js",
    "watch": "run-p watch:*",
    "watch:server": "tsc -p . -w",
    "watch:client": "esbuild client/index.ts --watch --bundle --minify --outfile=build/bundle.min.js",
    "watch:js": "nodemon --ignore dist/client dist/server/index.js -- --dev"
  },
  "dependencies": {
    "@beenotung/tslib": "^20.3.0",
    "better-sqlite3": "^7.6.2",
    "better-sqlite3-helper": "^3.1.6",
    "better-sqlite3-proxy": "^1.7.0",
    "better-sqlite3-schema": "^2.3.6",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "debug": "^4.3.4",
    "dotenv": "^16.0.3",
    "escape-html": "^1.0.3",
    "express": "^4.18.2",
    "fastest-levenshtein": "^1.0.16",
    "listening-on": "^2.0.9",
    "marked": "^4.2.12",
    "node-fetch": "^3.3.0",
    "open": "^8.4.2",
    "sanitize-html": "^2.10.0",
    "spdy": "^4.0.2",
    "timezone-date.ts": "^2.0.1",
    "url-router.ts": "^1.2.0",
    "ws": "^8.12.1"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.3",
    "@types/compression": "^1.7.2",
    "@types/cookie-parser": "^1.4.3",
    "@types/debug": "^4.1.7",
    "@types/escape-html": "^1.0.2",
    "@types/express": "^4.17.17",
    "@types/integer": "^4.0.1",
    "@types/marked": "^4.0.8",
    "@types/node": "^16.18.12",
    "@types/node-fetch": "^2.6.2",
    "@types/sanitize-html": "^2.8.0",
    "@types/spdy": "^3.4.5",
    "@types/ws": "^8.5.4",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "esbuild": "^0.15.18",
    "eslint": "^8.34.0",
    "fix-esm-import-path": "^1.3.1",
    "format-json-cli": "^1.0.1",
    "gen-env": "^1.0.1",
    "nodemon": "^2.0.20",
    "npm-run-all": "^4.1.5",
    "populate-env": "^2.0.0",
    "prettier": "^2.8.4",
    "typescript": "^4.9.5"
  }
}
